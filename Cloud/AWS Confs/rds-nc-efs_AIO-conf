#!/bin/bash

# Actualizar e instalar paquetes necesarios para Nextcloud y EFS
sudo apt update
sudo apt install -y apache2 \
    libapache2-mod-php \
    ghostscript \
    mysql-client \
    php \
    php-bcmath \
    php-curl \
    php-gd \
    php-gmp \
    php-intl \
    php-json \
    php-mbstring \
    php-mysql \
    php-xml \
    php-zip \
    php-imagick \
    php-redis \
    zip \
    nfs-common \
    bzip2 \
    unzip

# Crear base de datos y usuario en RDS (rellena tu endpoint, usuario y claves)
DB_USER=ncadmin
DB_PASS='contrasenya123'
DB_NAME=nextclouddb
DB_HOST=nc-ec2-rds.cluster-clme2808cgr6.us-east-1.rds.amazonaws.com

tee crea-nextcloud-db.sql <<EOF
CREATE DATABASE IF NOT EXISTS \`$DB_NAME\`;
CREATE USER IF NOT EXISTS '$DB_USER'@'%' IDENTIFIED BY '$DB_PASS';
GRANT ALL PRIVILEGES ON \`$DB_NAME\`.* TO '$DB_USER'@'%';
FLUSH PRIVILEGES;
EOF

# Opcional: solo crear DB si no existe (aunque el SQL ya usa IF NOT EXISTS)
if ! mysql -u admin -pcontrasenya123 -h "$DB_HOST" -e "USE $DB_NAME" 2>/dev/null; then
    echo "Creando base de datos en RDS..."
    cat crea-nextcloud-db.sql | mysql -u admin -pcontrasenya123 -h "$DB_HOST"
fi

# Configuraci칩n del almacenamiento EFS
unitat_compartida=fs-00dcd2af7c8c661f1.efs.us-east-1.amazonaws.com:/
punt_de_muntatge=/var/www
sudo mkdir -p $punt_de_muntatge

sudo mount -t nfs4 -o nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport $unitat_compartida $punt_de_muntatge

# A침adir EFS al fstab para montar autom치ticamente en reinicios
grep $unitat_compartida /etc/fstab || echo "$unitat_compartida $punt_de_muntatge nfs4 nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport,_netdev 0 0" | sudo tee -a /etc/fstab

# Descargar Nextcloud si no est치 ya en el EFS
if [ ! -d /var/www/nextcloud ]; then
    sudo wget https://download.nextcloud.com/server/releases/latest.zip -P /var/www
    sudo unzip /var/www/latest.zip -d /var/www
    sudo rm /var/www/latest.zip
fi

# Crear directorio data y asignar permisos
sudo chown -R www-data:www-data /var/www/nextcloud

# Crear archivo VirtualHost de Apache para Nextcloud
sudo tee /etc/apache2/sites-available/nextcloud.conf << EOF
<VirtualHost *:80>
    DocumentRoot /var/www/nextcloud/
    <Directory /var/www/nextcloud>
        Options +FollowSymlinks
        AllowOverride All
        Require all granted
        <IfModule mod_dav.c>
          Dav off
        </IfModule>
        SetEnv HOME /var/www/nextcloud
        SetEnv HTTP_HOME /var/www/nextcloud
    </Directory>
</VirtualHost>
EOF

sudo a2ensite nextcloud
sudo a2enmod rewrite headers env dir mime setenvif ssl
sudo a2dissite 000-default
sudo systemctl restart apache2

# Configuraci칩n PHP recomendada para Nextcloud
sudo sed -i 's/memory_limit = .*/memory_limit = 1024M/' /etc/php/*/apache2/php.ini
sudo sed -i 's/upload_max_filesize = .*/upload_max_filesize = 1G/' /etc/php/*/apache2/php.ini
sudo sed -i 's/post_max_size = .*/post_max_size = 1G/' /etc/php/*/apache2/php.ini
sudo sed -i 's/;date.timezone =/date.timezone = Europe\/Madrid/' /etc/php/*/apache2/php.ini

sudo systemctl restart apache2

# Instalar Nextcloud via occ
cd /var/www/nextcloud

# 游댌 Verificar si Nextcloud ya est치 instalado (config.php existe)
if sudo -u www-data php /var/www/nextcloud/occ status | grep -q "installed: true"; then
    echo "Nextcloud ya est치 instalado."
else
    ADMIN_USER="admin3"
	ADMIN_PASS="contrasenya123"
	
    echo "Instalando Nextcloud por primera vez..."
    sudo -u www-data php occ maintenance:install \
      --database "mysql" \
      --database-name "$DB_NAME" \
      --database-user "$DB_USER" \
      --database-pass "$DB_PASS" \
      --database-host "$DB_HOST" \
      --admin-user "$ADMIN_USER" \
      --admin-pass "$ADMIN_PASS"

    # Configurar trusted_domains solo en primera instalaci칩n
    sudo -u www-data php occ config:system:set trusted_domains --value '["localhost","nc-ec2.aws.z3nwary.com"]' --type=json

    DATA_DIR="/var/www/nextcloud/data/$ADMIN_USER"
    # Asegurar directorio 'files' del admin
    if [ ! -d "$DATA_DIR/files" ]; then
        sudo mkdir -p "$DATA_DIR/files"
        sudo chown -R www-data:www-data "$DATA_DIR"
        sudo chmod 750 "$DATA_DIR/files"
    fi

    # Escanear para inicializar
    sudo -u www-data php occ files:scan --all

fi

sudo -u www-data php occ config:system:set system.filelocking.enabled --value="false" --type=boolean

sudo systemctl restart apache2
